@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#dialog-model').dialog({
            autoOpen: false,
//            show: "pulsate",
//            hide: "explode"
        });
        $('#lnkButton').button().click(function () {
            if ($('#txtLanguage').val().length == 0) {
                $('#model-text').text('Please enter some text.');
                $("#dialog-message").dialog({
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    }
                }).dialog('open');
                return;
            }
            $.post('/Home/Index', { text: $('#txtLanguage').val() }, function (data) {
                $("#dialog:ui-dialog").dialog("destroy");
                if (data.length > 0) {
                    $('#model-text').text('The Language of the text entered is '+data);
                } else {
                    $('#model-text').text('Cannot Find the language.');
                }
                $("#dialog-message").dialog({
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    }
                }).dialog('open');
            });
        });
    });
</script>
